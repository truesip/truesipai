# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=3000
NODE_ENV=production
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database Configuration (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_phone_platform
REDIS_URL=redis://localhost:6379

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4-turbo-preview
MAX_TOKENS=150
TEMPERATURE=0.7

# Voice Configuration
DEFAULT_VOICE=aura-odysseus-en
AUDIO_ENCODING=mulaw
SAMPLE_RATE=8000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Call Configuration
MAX_CALL_DURATION=600
MAX_CONCURRENT_CALLS=50
RECORD_CALLS=true
TRANSCRIPT_CALLS=true

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com
STATUS_CALLBACK_URL=https://your-domain.com/webhook/status

# DigitalOcean App Platform Specific
DO_APP_NAME=deepgram-ai-phone-platform
DO_REGION=nyc3
DO_SIZE=basic-xxs

